    @Scripts.Render("~/Content/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js")
    @Scripts.Render("~/Content/plugins/summernote/summernote-bs4.min.js")
    @Scripts.Render("~/Content/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js")
    @Scripts.Render("~/Content/dist/js/adminlte.js")
    @Scripts.Render("~/Content/dist/js/pages/dashboard.js")
    @Scripts.Render("~/Content/dist/js/demo.js")
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">            
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>
            </nav>
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="index3.html" class="brand-link">
                    <img src="@Url.Content("~/Content/dist/img/AdminLTELogo.png")" alt="Logo Espam" class="text-center"
                         style="opacity: .8; width:95%">
                </a>
                <div class="sidebar">
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    </div>
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item has-treeview menu-open">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Configuración Cohorte
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Semestre","Administrador")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Semestres</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Modulo","Administrador")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Módulos</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Docente","Administrador")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Docentes</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("ConfigurarCohorte","Administrador")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Configuración final</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item has-treeview menu-open">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Configuración Horarios
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ConfigurarHorario","Administrador")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Horarios</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="pages/calendar.html" class="nav-link">
                                    <i class="nav-icon far fa-calendar-alt"></i>
                                    <p>
                                        Reportes
                                        <span class="badge badge-info right">2</span>
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>

            @RenderBody()
            <footer class="main-footer">
                <strong>Copyright &copy; 2020 <a href="http://espam.edu.ec">ESPAM MFL</a>.</strong>
                Todos los derechos reservados
                <div class="float-right d-none d-sm-inline-block">
                    <b>Version</b> 1.0.0
                </div>
            </footer>
    </div>
    <!-- ./wrapper -->

</body>
</html>
