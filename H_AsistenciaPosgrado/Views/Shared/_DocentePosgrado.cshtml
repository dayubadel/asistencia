@if (Session["roll"] != null && Session["roll"].ToString() == "40")
{
    <!DOCTYPE html>

    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        @Styles.Render("~/Content/plugins/fontawesome-free/css/all.min.css")
        @Styles.Render("https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
        @Styles.Render("~/Content/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css")
        @Styles.Render("~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css")
        @Styles.Render("~/Content/plugins/jqvmap/jqvmap.min.css")
        @Styles.Render("~/Content/dist/css/AdminLTE.min.css")
        @Styles.Render("~/Content/plugins/overlayScrollbars/css/OverlayScrollbars.min.css")
        @Styles.Render("~/Content/plugins/daterangepicker/daterangepicker.css")
        @Styles.Render("~/Content/plugins/summernote/summernote-bs4.css")
        @Styles.Render("https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700")

        @Scripts.Render("~/Content/plugins/jquery/jquery.min.js")
        @Scripts.Render("~/Content/plugins/jquery-ui/jquery-ui.min.js")
        <script>$.widget.bridge('uibutton', $.ui.button)</script>
        @Scripts.Render("~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js")
        @Scripts.Render("~/Content/plugins/chart.js/Chart.min.js")
        @Scripts.Render("~/Content/plugins/sparklines/sparkline.js")
        @Scripts.Render("~/Content/plugins/jqvmap/jquery.vmap.min.js")
        @Scripts.Render("~/Content/plugins/jqvmap/maps/jquery.vmap.usa.js")
        @Scripts.Render("~/Content/plugins/jquery-knob/jquery.knob.min.js")
        @Scripts.Render("~/Content/plugins/moment/moment.min.js")
        @Scripts.Render("~/Content/plugins/daterangepicker/daterangepicker.js")
        @Scripts.Render("~/Content/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js")
        @Scripts.Render("~/Content/plugins/summernote/summernote-bs4.min.js")
        @Scripts.Render("~/Content/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js")
        @Scripts.Render("~/Content/dist/js/adminlte.js")
        @Scripts.Render("~/Content/dist/js/pages/dashboard.js")
        @Scripts.Render("~/Content/dist/js/demo.js")
    </head>
    <body class="hold-transition sidebar-mini layout-fixed">
        <div class="wrapper">
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>
            </nav>
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <a href="@Url.Action("Inicio","Inicio")" class="brand-link">
                    <img src="@Url.Content("~/Content/dist/img/AdminLTELogo.png")" alt="Logo Espam" class="text-center"
                         style="opacity: .8; width:95%">
                </a>
                <div class="sidebar">
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    </div>
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item has-treeview menu-open">
                                <a href="@Url.Action("ModulosPorDocente", "DocentePosgrado")" class="nav-link">
                                    <i class="fa fa-book nav-icon"></i>
                                    <p>Módulos</p>
                                </a>
                                <a href="@Url.Action("EstudiantesPorModulos", "DocentePosgrado")" class="nav-link">
                                    <i class="fa fa-users nav-icon"></i>
                                    <p>Estudiantes</p>
                                </a>
                                <a href="@Url.Action("Asistencia", "DocentePosgrado")" class="nav-link">
                                    <i class="fa fa-check nav-icon"></i>
                                    <p>Asistencia</p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>

            @RenderBody()
            <footer class="main-footer">
                <strong>Copyright &copy; 2020 <a href="http://espam.edu.ec">ESPAM MFL</a>.</strong>
                Todos los derechos reservados
                <div class="float-right d-none d-sm-inline-block">
                    <b>Version</b> 1.0.0
                </div>
            </footer>
        </div>

    </body>
</html>
}
else if (Session["roll"] != null && Session["roll"].ToString() == "28")
{
Response.Redirect(@Url.Action("Inicio", "Administrador"));
}
else if (Session["roll"] != null && Session["roll"].ToString() == "39")
{
Response.Redirect(@Url.Action("Inicio", "Estudiante"));
}
else
{
Response.Redirect(@Url.Action("Inicio", "Inicio"));
}
